{
    "name": "riesenia/cakephp-routing",
    "description": "cakephp attribute routing",
    "homepage": "https://cakephp.org",
    "type": "library",
    "license": "MIT",
    "require": {
        "cakephp/cakephp": "^5.0.1",
        "php": "^8.1",
        "kcs/class-finder": "^0.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.1",
        "rshop/php-cs-fixer-config": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Riesenia\\Routing\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Riesenia\\Routing\\Test\\": "tests/",
            "Riesenia\\Routing\\App\\": "tests/test_app/src/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-main": "5.x-dev"
        }
    },
    "scripts": {
        "fixer": "docker run --rm -v $PWD:/var/www/html rshop/pipeline:8.1 bash -c \"cd /var/www/html && php-cs-fixer fix\"",
        "phpstan": "docker run  --rm -v $PWD:/var/www/html rshop/pipeline:8.1 bash -c \"cd /var/www/html && phpstan\""
    },
    "config": {
        "allow-plugins": {
            "cakephp/plugin-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
