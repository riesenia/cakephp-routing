{
    "name": "riesenia/cakephp-routing",
    "description": "cakephp attribute routing",
    "homepage": "https://cakephp.org",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "cakephp/cakephp": "^5.0.1"
    },
    "require-dev": {
        "rshop/php-cs-fixer-config": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Rshop\\Routing\\": "src/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-main": "5.x-dev"
        }
    },
    "scripts": {
        "fixer": "docker run -it --rm -v $PWD:/var/www/html rshop/pipeline:8.1 bash -c \"cd /var/www/html && php-cs-fixer fix\"",
        "phpstan": "docker run -it --rm -v $PWD:/var/www/html rshop/pipeline:8.1 bash -c \"cd /var/www/html && phpstan\""
    },
    "config": {
        "allow-plugins": {
            "cakephp/plugin-installer": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
